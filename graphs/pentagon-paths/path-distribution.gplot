#! /usr/bin/env gnuplot
#
# Create charts showing the distribution of the pentagon-shaped
# interaction loops.
#
set term png

set yrange [:20000]
set logscale x
set logscale y
set format y "10^{%L}"

set out 'path-genes-sym.png'

set title "Number of pentagons a gene participates in"
set xlabel "Gene Rank"
set ylabel "Number of pentagons"

# Eyeballed fit to the data.
plot "path-genes-sym.csv" using 1:3 with lines title "data", \
     "path-genes-sym.csv" using 1:(10000 / ($1)**0.5) with lines title "1/âˆšrank"

## -----------------------------------------------------
#
set out 'path-proteins-sym.png'

set title "Number of pentagons a protein participates in"
set xlabel "Protein Rank"
set ylabel "Number of pentagons"

# Eyeballed fit to the data.
plot "path-proteins-sym.csv" using 1:3 with lines title "data", \
     "path-proteins-sym.csv" using 1:(10000 / ($1)**0.5) with lines title "1/sqrt(rank)"

